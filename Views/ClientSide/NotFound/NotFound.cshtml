  @{
    Layout="_UserLayout";
     ViewData["Title"] = "Page Not Found";
  }

<div class="not-found-container">
    <h1>404 - Page Not Found</h1>
    <p>Sorry, the page you're looking for doesn't exist.</p>
    <img src="~/user_layout/images/404.png" alt="404 Not Found" class="not-found-image" />
    <p><a href="/">Back to Home</a></p>
</div>

<style>
    .not-found-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
        padding: 20px;
    }

    .not-found-image 
    {
        max-width: 100%;
        height: auto;
        margin: 20px 0;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
    }

    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;        
    }

    a:hover {
        text-decoration: underline;
    }
</style>



