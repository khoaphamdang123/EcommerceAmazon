@{
    Layout="_UserLayout";
    
    var categories=ViewBag.categories as List<Category>;
    
    var company=ViewBag.company as ApplicationUser;

    string email=company.Email.Split('#')[0];

       string phone1="";
       
       string phone2="";

       string[] company_name=company.Address1.Split('!');
       
       string[] phones= company.PhoneNumber.Split(',');
       
       if(phones.Length>1)
       {
        phone1=phones[0];
        
        phone2=phones[1];
       }
       else if(phones.Length==1)
       {
        phone1=phones[0];
       }

       string company_name_value=company_name[0];
       
       string address1=company_name[1];
}

<div class="container mt-5">    
    <div class="row">        
    <div class="col-md-6 mb-3 mt-3">            
    
<div class="card">                
    <div class="card-body">                    
        <h2 class="mb-3">Thông tin liên hệ</h2>                   

<p><strong>Tên công ty:</strong>&nbsp;@company_name_value</p>

<p><strong>Văn phòng Hồ Chí Minh:</strong>&nbsp; @address1</p>  

<p><strong>Hotline:</strong>&nbsp; @phone1</p>                    

@if(!string.IsNullOrEmpty(company.Address2))
{
<p><strong>Văn phòng Hà Nội:</strong> &nbsp; @company.Address2</p>                   
}

<p><strong>Hotline:</strong>&nbsp; @phone2</p>
                    

<p><strong>Email:</strong>&nbsp; @email</p>

<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.617204335623!2d106.64350831534452!3d10.758869392333795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edc7bfa5f91%3A0x3cf286b69b735bd8!2zMzM3IE1pbmggUGjhu5FuZywgUGjGsOG7nW5nIDIsIFF14bqtbiAxMSwgVGjhu6cgSOG7kyBN4buZIFRow6BuaCwgSMOyIGNow60gTWluaCBDaXR5LCBWw6AgU00gUCDgpL4gVA!5e0!3m2!1sen!2s!4v1691530935786!5m2!1sen!2s&markers=10.758869392333795,106.64350831534452"
width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>                
  </div>            
  </div>        
  </div>        
   <div class="col-lg-3 col-md-4 col-12">
		<aside class="sidebar-page">
	<!-- Menu sidebar  -->
	<div class="group-sidebox">
		<div class="sidebox-title">
			<h3 class="htitle"><strong>Danh mục trang</strong></h3>
		</div>
		<div class="sidebox-content sidebox-content-togged active">
			<ul class="menuList-links">
	           <li class=""><a href="@Url.Action("HomePage","HomePage")" title="HomePage"><span>Trang chủ</span></a></li>
			    
                <li class=""><a href="@Url.Action("AboutUs","StaticPage")" title="About Us"><span>Về chúng tôi</span></a></li>
			 
             @foreach(var cat in categories)
             { 
            if(cat.SubCategory.Count>0)
             {
				<li class="has-submenu level0">
					<a href="@Url.Action("ProductsByCategory","Products",new{category_name=cat.CategoryName})" title="@cat.CategoryName">@cat.CategoryName<span class="icon-submenu toggle-icon">+</span></a>

                    <ul class="submenu-links">
					 
                    @foreach(var sub_cat in cat.SubCategory)
                     {
						<li><a href="@Url.Action("ProductBySubCategory","Products",new{sub_cat_id=sub_cat.Id})" title="@sub_cat.SubCategoryName">@sub_cat.SubCategoryName</a></li>
                     }
					</ul>
				</li>
                }
            else{
            <li>
                <a href="@Url.Action("ProductsByCategory","Products",new{category_name=cat.CategoryName})" title="@cat.CategoryName"><span>@cat.CategoryName</span></a>
            </li>
            }
          }

			</ul>
		</div>
	</div>

	<div class="group-sidebox-banner">
		<div class="groupbanner_image"> 
			<a class="groupbanner_image_link" href="/">
				<div class="groupbanner_image_block banner-hover-effect">
					<picture>
						<source data-srcset="//theme.hstatic.net/1000382550/1001195580/14/page_banner_image.jpg?v=273" srcset="//theme.hstatic.net/1000382550/1001195580/14/page_banner_image.jpg?v=273">
						<img class=" ls-is-cached lazyloaded" data-src="//theme.hstatic.net/1000382550/1001195580/14/page_banner_image.jpg?v=273" src="//theme.hstatic.net/1000382550/1001195580/14/page_banner_image.jpg?v=273" alt="the swan">
					</picture>
				</div>						
			</a>		
		</div>	
	</div>
</aside>
		</div>
   </div>
</div>

