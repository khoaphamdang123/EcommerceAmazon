      @if(Model!=null && Model.hasNextPage)
      {
         <a class="page-item" title="Next" href="@Url.Action("StaticFilesPaging",new{page_size=int.Parse(selected_size),page=Model?.currentPage+1})"><i class="bx bx-chevron-right"></i></a>
