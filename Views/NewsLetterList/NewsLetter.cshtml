  var sendButton = document.getElementById('send-news-letter');

  sendButton.addEventListener('click',()=>{
   var toast_message= document.querySelector('.toast-body');
   toast_message.textContent='NewsLetter đang được gửi đến các subscriber.Vui lòng đợi trong giây lát...';
   var toastPrompt = document.querySelector('.toast');
    toastPrompt.classList.add('bg-info');
    toastPrompt.classList.remove('bg-success', 'bg-danger');
    var toast_show = new bootstrap.Toast(toastPrompt);
    toast_show.show();
    var content = document.getElementById('content').value;
    var url = '@Url.Action("BroadcastNewsLetter", "NewsLetter")';
    var formData = new FormData();
    formData.append('content', content);
    $.ajax({
      url: url,
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      success: function(response) 
    {
        var toastEl = document.querySelector('.toast');
        var toastBody = toastEl.querySelector('.toast-body');
        toastBody.textContent = response.message;
        if(response.status==1)
      {
        toastEl.classList.add('bg-success');
        toastEl.classList.remove('bg-danger');
      }
      else
      {
        toastEl.classList.add('bg-danger');
        toastEl.classList.remove('bg-success');
      }
        var toast = new bootstrap.Toast(toastEl);
        toast.show();
      },
      error: function(xhr, status, error) {
        var toastEl = document.querySelector('.toast');
        var toastBody = toastEl.querySelector('.toast-body');
        toastBody.textContent = 'Error sending newsletter: ' + error;
        toastEl.classList.add('bg-danger');
        toastEl.classList.remove('bg-success');
        var toast = new bootstrap.Toast(toastEl);        
        toast.show();
      }
    });    
  })

